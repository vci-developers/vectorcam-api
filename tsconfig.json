{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["ES2022"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "deno-shim.d.ts",
    "bun.d.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"],
  "types": ["node"]
} 